<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040"
    android:onClick="Numberclick"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="405dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="Calculator"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/display2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="88dp"
        android:gravity="bottom|right"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/display1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="bottom|right"
        android:hint="0"
        android:isScrollContainer="true"
        android:nestedScrollingEnabled="false"
        android:overScrollMode="ifContentScrolls"
        android:padding="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/display2"
        tools:layout_editor_absoluteX="-2dp" />

    <TableLayout
        android:layout_width="391dp"
        android:layout_height="370dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/mod"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:autoText="true"
                android:background="#75D5D5D5"
                android:backgroundTint="#B1A44D"
                android:onClick="onOperation"
                android:text="%"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#BA3636"
                android:textColorLink="#E63232"
                android:textSize="30dp"
                android:textStyle="bold"
                app:iconTint="#CC2D2D" />

            <Button
                android:id="@+id/reset"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:background="#75D5D5D5"
                android:backgroundTint="#63B8B8B8"
                android:onClick="ClearDisplay"
                android:text="CE"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button3"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:background="#75D5D5D5"
                android:backgroundTint="#63B8B8B8"
                android:onClick="onCclicked"
                android:text="C"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/divide"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:background="#75D5D5D5"
                android:backgroundTint="#FF0000"
                android:onClick="onOperation"
                android:text="/"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="30dp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/seven"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:background="#75D5D5D5"
                android:backgroundTint="#63B8B8B8"
                android:onClick="Numberclick"
                android:text="7"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/eight"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:background="#75D5D5D5"
                android:backgroundTint="#63B8B8B8"
                android:onClick="Numberclick"
                android:text="8"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/nine"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:background="#75D5D5D5"
                android:backgroundTint="#63B8B8B8"
                android:onClick="Numberclick"
                android:text="9"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Multiply"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:background="#75D5D5D5"
                android:backgroundTint="#63B8B8B8"
                android:onClick="onOperation"
                android:text="*"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="30dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/four"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:background="#75D5D5D5"
                android:backgroundTint="#63B8B8B8"
                android:onClick="Numberclick"
                android:text="4"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/five"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:background="#75D5D5D5"
                android:backgroundTint="#63B8B8B8"
                android:onClick="Numberclick"
                android:text="5"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/six"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:background="#75D5D5D5"
                android:backgroundTint="#63B8B8B8"
                android:onClick="Numberclick"
                android:text="6"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/substraction"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:background="#75D5D5D5"
                android:backgroundTint="#63B8B8B8"
                android:onClick="onOperation"
                android:text="-"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="30dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/three"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:background="#75D5D5D5"
                android:backgroundTint="#63B8B8B8"
                android:onClick="Numberclick"
                android:text="3"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/two"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:background="#75D5D5D5"
                android:backgroundTint="#63B8B8B8"
                android:onClick="Numberclick"
                android:text="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/one"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:background="#75D5D5D5"
                android:backgroundTint="#63B8B8B8"
                android:onClick="Numberclick"
                android:text="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/plus"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:background="#75D5D5D5"
                android:backgroundTint="#63B8B8B8"
                android:onClick="onOperation"
                android:text="+"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="30dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/plusMinus"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:background="#75D5D5D5"
                android:backgroundTint="#63B8B8B8"
                android:onClick="Numberclick"
                android:text="+/-"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/zero"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:background="#75D5D5D5"
                android:backgroundTint="#63B8B8B8"
                android:onClick="Numberclick"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dot"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:background="#75D5D5D5"
                android:backgroundTint="#63B8B8B8"
                android:onClick="Numberclick"
                android:text="."
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ans"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:background="#75D5D5D5"
                android:backgroundTint="#63B8B8B8"
                android:onClick="DisplayAns"
                android:text="="
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="30dp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>